@{
    ViewData["Title"] = "Login";
}
@model wedding.Models.User
@{
    foreach(var error in @ViewBag.errors){
        <p style="color:red">@error.Errors[0].ErrorMessage</p>
    }
}
<h1>Login</h1>
<form asp-controller="User" asp-action="Login" method="post">
    <br><label for="Email">Email:</label><input id="Email" type="text" name="Email">
    <br><label for="Password">Password:</label><input id="Password" type="text" name="Password">
    <br><input type="submit" value="submit">
</form>
<p style="color: red">@ViewBag.NewError</p>
<a href="/Register">Don't Have an Account?</a>